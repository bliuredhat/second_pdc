<%= table_rows_helper([
  [ 'Short Name',           product.short_name ],
  [ 'Name',                 product.name ],
  [ 'Description',          product.description ],
  [ 'Valid Bug States',     product.valid_bug_states.join(', ') ],
  [ 'Active?',              yes_no_icon_and_text(product.isactive?) ],
  [ 'Supports PDC?',        yes_no_icon_and_text(product.supports_pdc?) ],
  ([ 'PDC Product',         maybe_link_to_pdc_product(product.pdc_product) ] if product.supports_pdc?),
  ([ 'FTP Path',            product.ftp_path ] if product.allow_ftp?),
  ([ 'FTP Subdirectory',    product.ftp_subdir ] if product.allow_ftp?),
  [ 'Internal Product?',    yes_no_icon_and_text(product.is_internal?) ],
  [ 'Allowed Push Targets', block_or_none_text(product.push_targets) { |targets| targets.map{ |t| t.name.titleize }.join(', ') } ],
  ([ 'CDW Flag Prefix',      dash_if_blank(product.cdw_flag_prefix) ] if product.is_internal?),
  [ 'Default Solution',     ("#{product.default_solution.title}" + tag("br") + content_tag(:pre, product.default_solution.text, :class=>'scroll-if-long', :style=>'width:50em;background-color:white;font-size:80%;')).html_safe ],
  [ 'Workflow Rule Set',    product.state_machine_rule_set.label ],
  ([ 'Rpm Name Prefixes',   product.brew_rpm_name_prefix_strings.join('<br/>').html_safe ] if product.brew_rpm_name_prefixes.any?),
  [ 'Move bugs to ON_QA',   product.move_bugs_on_qe? ? "When advisory moves to QE state" : "When bugs are added to advisory" ],
  [ 'Text-only advisories require dists?', yes_no_icon_and_text(product.text_only_advisories_require_dists?) ],
], :labels=>true) %>
