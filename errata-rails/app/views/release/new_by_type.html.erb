<h1>New <%= @type %></h1>

<%= form_tag :action => 'create' do %>
  <%= hidden_field_tag :type, @type %>
  <%= render :partial => 'form' %>
  <%= render :partial => "new_#{@type.downcase}" %>
  <%= submit_tag "Create", :class=>'btn btn-primary' %>
<% end %>

<%= link_to 'Back', :action => 'list' %>
